@using Desafio.Umbler.Features.DomainContext.Services

@if (DomainData != null)
{
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-lg-10 col-xl-8">
            <div class="card shadow-lg" style="background-color: rgb(26, 35, 50); border: none;">
                <div class="card-header bg-transparent border-bottom border-secondary">
                    <h3 class="text-white mb-0">
                        <i class="bi bi-globe me-2"></i>
                        Informações do Domínio
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <DomainInfoItem
                                Label="Domínio"
                                Value="@DomainData.Name"
                                IsLink="true"
                                LinkUrl="@($"http://{DomainData.Name}")" />
                        </div>
                        <div class="col-md-4">
                            <DomainInfoItem
                                Label="Endereço IP"
                                Value="@DomainData.Ip" />
                        </div>
                        <div class="col-md-4">
                            <DomainInfoItem
                                Label="Hospedado em"
                                Value="@DomainData.HostedAt" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public DomainDto? DomainData { get; set; }
}
